#!/bin/bash -e

function usage() {
  echo >&2 "Usage:"
  echo >&2 "  ./up [OPTIONS]"
}

if vagrant status | grep -q 'not created'; then
  start_time=$(date +%s)
  rm -f Berksfile.lock
  berks install -p cookbooks/
  stop_time=$(date +%s)
  echo "** Berkshelf took $(($stop_time - $start_time))s"

  start_time=$(date +%s)
  VAGRANT_EBS_RAID=1 vagrant up --provider=aws
  stop_time=$(date +%s)
  echo "** Vagrant took $(($stop_time - $start_time))s"
fi

vagrant ssh
